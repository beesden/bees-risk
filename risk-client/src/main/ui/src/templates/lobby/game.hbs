<section class="game-setup">

    <h1>{{ game.name }}</h1>

    <ol class="riskPlayers">
        {{#each game.players }}
            <li style="border-left-color:{{colour}}">{{name}}</li>
        {{/each}}
    </ol>

    <button class="button cancel" data-action="leaveGame">Leave game</button>

    {{#if canStart}}
        <button class="button confirm" data-action="startGame">Start game</button>
    {{/if}}

</section>